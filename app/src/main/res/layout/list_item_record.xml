<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_record_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/list_item_record_solved_check_box"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Crime Title" />

    <TextView
        android:id="@+id/list_item_record_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_record_title_text_view"
        android:layout_toLeftOf="@+id/list_item_record_solved_check_box"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Crime Date" />

    <CheckBox
        android:id="@+id/list_item_record_solved_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"
        android:text="@string/record_solved_label" />

</RelativeLayout>